<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/comment_short_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/comment_short_like_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like_label"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/comment_short_like_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/comment_short_like_label"
        android:layout_alignParentBottom="true"
        android:layout_alignBaseline="@+id/comment_short_like_label"/>

    <TextView
        android:id="@+id/comment_short_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_label"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignBaseline="@+id/comment_short_like_label"
        android:layout_toStartOf="@+id/comment_short_user_value"/>


    <TextView
        android:id="@+id/comment_short_user_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignBaseline="@+id/comment_short_like_label"/>

</RelativeLayout>