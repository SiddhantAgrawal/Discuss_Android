<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question_short_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textStyle="normal"
            android:textSize="20sp"
            android:text="@string/views" />

        <TextView
            android:id="@+id/question_short_view_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:text="23"
            android:layout_toEndOf="@+id/question_short_view_label" />

        <TextView
            android:id="@+id/question_short_difficulty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/question_short_difficulty_value"
            android:textStyle="normal"
            android:textSize="20sp"
            android:text="@string/difficulty" />

        <TextView
            android:id="@+id/question_short_difficulty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:text="23"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <TextView
        android:id="@+id/question_short_question"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/pic" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question_short_like_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="like_image"
            android:src="@drawable/liked" />

        <!--<TextView
            android:id="@+id/question_short_like_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/like_label"
            android:textSize="20sp"
            android:textStyle="normal" />-->

        <TextView
            android:id="@+id/question_short_like_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/question_short_like_button"
            android:text="23"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_short_postedby_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/question_short_postedby_value"
            android:text="@string/posted_by"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_short_postedby_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="23"
            android:textSize="20sp"
            android:textStyle="normal" />

    </RelativeLayout>

</LinearLayout>

