<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_complete_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/views"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_complete_view_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/question_complete_view_label"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_complete_difficulty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/question_complete_difficulty_value"
            android:text="@string/difficulty"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_complete_difficulty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/question_complete_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/question_complete_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/pic" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_complete_like_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/like_label"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_complete_like_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/question_complete_like_label"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_complete_postedby_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question_complete_like_value"
            android:text="@string/posted_by"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/question_complete_postedby_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/question_complete_postedby_label"
            android:layout_toEndOf="@+id/question_complete_postedby_label"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bookmark" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/comment_tag"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="12dp" />

    <ListView
        android:id="@+id/question_complete_commentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
