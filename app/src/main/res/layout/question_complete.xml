<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/question_complete_difficulty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/difficulty" />

        <TextView
            android:id="@+id/question_complete_difficulty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/question_complete_question"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/question_complete_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/question_complete_view_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/question_complete_view_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:text="@string/views" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/question_complete_asked_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:text="@string/asked_by"/>

        <TextView
            android:id="@+id/question_complete_asked_by_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:text="deepak" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp">
    </View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question_complete_like_button"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/liked" />

        <TextView
            android:id="@+id/question_complete_like_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/question_complete_like_button"
            android:textSize="15sp"
            android:textStyle="normal" />


        <ImageView
            android:id="@+id/ib"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bookmark" />

    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="12dp" />

    <ListView
        android:id="@+id/question_complete_commentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
